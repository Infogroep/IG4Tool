<% title t("participant.other") %>
<% admin = current_user && current_user.access_allowed?(:user_editing) %>
<table class="table table-striped datatable">
	<thead>
		<tr>
			<th class="action_column"></th>
			<th><%= t("username") %></th>
			<th><%= t("clan.one") %></th>
			<th><%= t("email") %></th>
			<th><%= t("payed") %></th>
			<% if admin %>
			<th class="action_column"></th>
			<th class="action_column"></th>
			<th class="action_column"></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
	<tr class="<%= admin ? (user.payed ? "success" : "error") : "" %>">
		<td><%= image_tag avatar_url user%></td>
		<td><%= user.username %></td>
		<td><%= user.clan.tag if user.clan %></td>
		<td><%= user.email %></td>
		<td><span class="hide"><%= user.payed %></span><i class="<%= user.payed ? "icon-check" : "icon-check-empty" %>"></i></td>
		<% if admin %>
		<td><%= link_to t(:show), user, class: "btn" %></td>
		<td><%= link_to t(:edit), edit_user_path(user), class: "btn" %></td>
		<td><%= link_to t(:destroy), user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
		<% end %>
	</tr>
	<% end %>
	</tbody>
</table>

<br />

<% if current_user and current_user.access_allowed? :user_editing %>
<%= link_to t(:new, :model => t("user.one")), new_user_path, class: "btn"  %>
<h4><%= t(".payment_processing") %></h4>
<%= render 'payed_form' %>
<% end %>
