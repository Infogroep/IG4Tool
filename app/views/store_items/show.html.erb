<p>
	<b>Name:</b>
	<%= @store_item.name %>
</p>

<p>
	<b>Buy price:</b>
	<%= @store_item.purchase_price %>
</p>
<fieldset id="barcodes">
	<legend>barcodes</legend>
	<ul>
	<table border="0">
	<% @store_item.barcodes.each do |barcode| %>
		<tr>
			<td><%= link_to barcode.code, barcode %></td>
			<td><%= link_to t(:show), barcode %></td>
			<td><%= link_to t(:edit), edit_barcode_path(barcode) %></td>
			<td><%= link_to t(:destroy), barcode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
	</table>
	<%= link_to 'Add Barcode', new_barcode_path %>
	</ul>
</fieldset>


<%= link_to t(:edit), edit_store_item_path(@store_item) %> |
