<% title "StoreItems" %>

<table>
	<tr>
		<th>Name</th>
		<th>Buy price</th>
		<th>StoreItem type </th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

<% @store_items.each do |store_item| %>
	<tr>
		<td><%= store_item.name %></td>
		<td><%= store_item.purchase_price %></td>
		<td><%= store_item.store_item_type %></td>
		<td><%= link_to t(:show), store_item %></td>
		<td><%= link_to t(:edit), edit_store_item_path(store_item) %></td>
		<td><%= link_to t(:destroy), store_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
</table>

<br />

<%= link_to t(:new, :model => t(:store_item, :count => 1)), new_store_item_path %>
