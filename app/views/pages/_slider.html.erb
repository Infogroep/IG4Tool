<%= @featured_compos %>
<div class="carousel slide" id="slider">
	<div class="carousel-inner">
		<div class="active item">
			<%= image_tag("bam1.jpg", :size => "100%x100%") %>
			<div class="carousel-caption">
				<p class=""> caption text lallaalal </p>
			</div>
		</div>
		<% @featured_compos.each do |compo| %>
			<div class="item">
				<%= link_to image_tag(compo.game.image_url(:front)), compo %>
				<div class="carousel-caption">
					<div class="row">
						<div class="span5 offset1">
							<%= compo.description %>
						</div>
						<div class="span6">
							<%= compo.date_time %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	<a class="carousel-control left" href="#slider" data-slide="prev">&lsaquo;</a>
	<a class="carousel-control right" href="#slider" data-slide="next">&rsaquo;</a>
</div>
