<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<%= link_to t(:iLan), home_path, :class => "brand" %>
			<div class="nav-collapse collapse">
				<ul class="nav pull-left">
                  <li class="<%= active_class('pages#info') %>"><%= link_to t(:info), controller: :pages, action: :info %></li>
                  <li class="<%= active_class('compos') %>"><%= link_to t("compo.other"), compos_path %></li>
                  <li class="<%= active_class('users') %>"><%= link_to t("participant.other"), users_path %></li>
                  <li class="<%= active_class('pages#location') %>"><%= link_to t(:location), controller: :pages, action: :location %></li>
                  <li class="<%= active_class('pages#faq') %>"><%= link_to t(:faq), controller: :pages, action: :faq %></li>
                  <li class="<%= active_class('pages#contact') %>"><%= link_to t(:contact), controller: :pages, action: :contact %></li>
				</ul>
				<ul class="nav  pull-right">
                  <% if I18n.locale == :nl %>
                  <li><%= link_to t("lang.en", :locale => :en), controller: :pages, action: :home, locale: :en %></li>
                  <% else %>
                  <li><%= link_to t("lang.nl", :locale => :nl), controller: :pages, action: :home, locale: :en %></li>
                  <% end %>
                  <li class="divider-vertical"></li>
                  <% if self.current_user %>
                  <li class=<%= active_class('profile') %> ><%= link_to image_tag(avatar_url(self.current_user), class: 'nav-profile-logo')+" "+self.current_user.username, self.current_user %></li>
                  <li class="divider-vertical"></li>
                  <li><%= link_to t(:logout), logout_path %></li>
                  <% else %>
                  <li><%= link_to t(:login), login_path %></li>
                  <li class="navbar-text">OR</li>
                  <li><%= link_to t(:signup), signup_path %></li>
                  <% end %>
				</ul>
			</div>
		</div>
	</div>
