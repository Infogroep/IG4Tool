<% title "Compos" %>

<table class="table table-striped">
	<tr>
		<th>Game</th>
		<th>Slots</th>
		<th>Group size</th>
		<th>Datetime</th>
		<th class="action_column"></th>
		<th class="action_column"></th>
		<th class="action_column"></th>
	</tr>

<% @compos.each do |compo| %>
	<tr>
		<td><%= compo.game.name %></td>
		<td><%= compo.slots %></td>
		<td><%= compo.group_size %></td>
		<td><%= compo.date_time %></td>
		<td><%= button_to 'Show', compo %></td>
		<td><%= button_to 'Edit', edit_compo_path(compo) %></td>
		<td><%= button_to 'Destroy', compo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-danger" %></td>
	</tr>
<% end %>
</table>

<br />

<%= link_to 'New Compo', new_compo_path %>
