<% title "Barcodes" %>

<table>
	<tr>
		<th>StoreItem</th>
		<th>Code</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @barcodes.each do |barcode| %>
		<tr>
			<td><%= barcode.store_item.name %></td>
			<td><%= barcode.code %></td>
			<td><%= link_to t(:show), barcode %></td>
			<td><%= link_to t(:edit), edit_barcode_path(barcode) %></td>
			<td><%= link_to t(:destroy), barcode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>

<br/>

<%= link_to t(:new, :model => t("barcode.one")), new_barcode_path %>
