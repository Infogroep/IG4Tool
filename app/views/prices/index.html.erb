<% title "Prices" %>

<table>
	<tr>
		<th>Info</th>
		<th>Value</th>
		<th>Sponsor</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

<% @prices.each do |price| %>
	<tr>
		<td><%= price.info %></td>
		<td><%= price.value %></td>
		<td><%= price.sponsor %></td>
		<td><%= link_to t(:show), price %></td>
		<td><%= link_to t(:edit), edit_price_path(price) %></td>
		<td><%= link_to t(:destroy), price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
</table>

<br />

<%= link_to t(:new, :model => t(:price, :count => 1)), new_price_path %>
